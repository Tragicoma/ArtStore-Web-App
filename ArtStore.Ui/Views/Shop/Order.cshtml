<!DOCTYPE html>
<head>
    <title>Shopping cart</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,700" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
</head>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

        .container h1 {
            padding: 20px 0;
        }

    .cart {
        display: flex;
    }

    .product {
        display: flex;
        width: 100%;
        height: 200px;
        overflow: hidden;
        border: 1px solid silver;
    }

        .product:hover {
            border: none;
            box-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            transform: scale(1.01);
        }

        .product img {
            width: 300px;
            height: 200px;
            object-fit: cover;
        }

            .product img:hover {
                transform: scale(1.04);
            }

    .product-info {
        padding: 20px;
        width: 100%;
        position: relative;
    }

    .product-name, .product-price {
        margin-bottom: 20px;
    }

    .product-remove {
        position: absolute;
        bottom: 20px;
        right: 20px;
        padding: 10px 25px;
        background-color: plum;
        color: #ffffff;
        cursor: pointer;
        border-radius: 5px;
    }

        .product-remove:hover {
            background-color: #ffffff;
            color: plum;
            font-weight: 600;
            border: 1px solid plum;
        }

    .product-quantity input {
        width: 50px;
        height: 40px;
        padding-left: 10px;
        font-size: 20px;
        margin-right: 10px;
        border: 1px solid #000000;
    }

    .fa {
        margin-right: 5px;
    }

    .cart-total {
        max-width: 1200px;
        flex: 0.25;
        margin-left: 0;
        padding: 20px;
        height: 150px;
        border: 1px solid silver;
        border-radius: 5px;
    }
        /*    .cart-total{
        display:flex;
        justify-content:space-between;
        margin-bottom:20px;
        font-size:20px;
    }*/
        .cart-total a {
            display: block;
            text-align: center;
            height: 40px;
            line-height: 40px;
            background-color: palevioletred;
            color: #ffffff;
            border-radius: 5px;
        }
    .product-price::after {
        content: '€'
    }
    .total-price::after {
        content: '€'
    }
</style>

<body>
    <div class="container">
        <h1>Basket</h1>
        <div class="basket">
            <div class="products">
               
            </div>

            @*<div class="products">
                <div class="product">
                    <img src="~/exampleForShopFront/perle.jpg" />
                    <div class="product-info">
                        <h3 class="product-name">Zuze ar perli</h3>
                        <h2 class="product-price">15EUR</h2>
                        <p class="product-quantity"><input type="number" value="1" /></p>
                        <button class="btn product-remove" type="button">Remove</button>
                    </div>
                </div>
            </div>*@

            <div class="cart-total">
                <p>
                    <span>Total Price</span>
                    <span class="total-price"></span>
                </p>
                <p>
                    <span>Number of Items</span>
                    <span class="all-products"></span>
                </p>
                <a href="#">Proceed to Checkout</a>
            </div>
        </div>
    </div>
</body>
<!DOCTYPE html>

<style>
    .small-container {
        max-width: 1080px;
        margin: auto;
        padding-left: 25px;
        padding-right: 25px;
    }

    .cart-page {
        margin: 80px auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .basket-info {
        display: flex;
        flex-wrap: wrap;
    }

    .th {
        text-align: left;
        padding: 5px;
        color: plum;
        background: plum;
        font-weight: normal;
    }
    .td{
        padding:10px 5px;
    }
    .td input{
        width:40px;
        height:30px;
        padding:5px;
    }
    .td a{
        color:plum;
        font-size:12px;
    }
    .td img{
        width:80px;
        height:80px;
        margin-right:10px;
    }
</style>

<body>
    <div class="small-container cart-page">
        <table>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>

            <tr>
                <td>
                    <div class="basket-info">
                        <img src="~/exampleForShopFront/vincents.jpg" width="80" />
                        <div>
                            <p>Nu tas Vincents atkal</p>
                            <small>Price: 20EUR</small>
                            <br />
                            <a href="">Remove</a>
                        </div>
                    </div>
                </td>
                <td><input type="number" value="1" /></td>
                <td>20EUR</td>
            </tr>
        </table>
    </div>
</body>
